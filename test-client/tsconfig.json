{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "importsNotUsedAsValues": "error",
        "lib": ["esnext"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmitHelpers": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["*.test.ts"]
}
